{
    "manifest_version": 3,
    "name": "Focus Mode",
    "description": "Enable reading mode on Chrome's official Extensions and Chrome Web Store documentation.",
    "version": "1.0",
    "icons": {
      "16": "images/image.png",
      "32": "images/image.png",
      "48": "images/image.png"
    },
    "background": {
        "service_worker": "background.js"
      },
      "action": {
        "default_icon": {
          "16":"images/image.png",
          "32": "images/image.png",
          "48": "images/image.png"
        }
       
    },
    "permissions": ["scripting", "activeTab"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+M",
        "mac": "Command+U"
      }
    }
  }

 
}
  